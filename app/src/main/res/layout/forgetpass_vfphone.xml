<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/vfphone_fanhui"
            android:orientation="vertical">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="31dp"
            android:src="@mipmap/fanhui" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手机验证"
            android:textColor="@color/heise"
            android:textSize="20sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huise" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_border_gray"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:id="@+id/vfphone_account"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入帐号" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_border_gray"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:gravity="center"
            android:background="@drawable/shape_border_gray">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="中国 +86"
                android:textColor="@color/heise"
                android:textSize="16dp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:id="@+id/vfphone_phone"
            android:background="@null"
            android:hint="请输入绑定的手机号码" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_border_gray"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:id="@+id/vfphone_code"
            android:hint="请输入短信验证码"
            android:background="@null"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:text="获取验证码"
        android:textSize="16dp"
        android:id="@+id/vfphone_btn"
        android:textColor="@color/baise"
        android:background="@color/chengse"/>
</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="完成"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:id="@+id/vfphone_finish"
        android:textColor="@color/baise"
        android:gravity="center"
        android:background="@color/chengse"/>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/heise"
            android:textSize="14dp"
            android:text="若未绑定手机请"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vfphone_clickH"
            android:text="点击这里"
            android:textSize="16dp"
            android:textColor="@color/chengse"/>
    </LinearLayout>-->
</LinearLayout>
