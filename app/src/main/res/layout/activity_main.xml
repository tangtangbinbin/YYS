<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main_viewswitcher"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/baise"
        android:orientation="vertical">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/a94"
            android:id="@+id/main_splash_img2"/>
        <!--<WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scrollbars="none"
            android:id="@+id/main_splash_img"/>-->
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/main_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huise"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/main_rg"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:id="@+id/main_shouye"
            android:text="首页"
            android:button="@null"
            android:layout_weight="1"
            android:checked="true"
            android:background="#00000000"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:drawableTop="@drawable/selecter_shouye_img"
            android:textColor="@drawable/selecter_text_color"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:id="@+id/main_hudong"
            android:text="互动"
            android:button="@null"
            android:layout_weight="1"
            android:checked="false"
            android:gravity="center"
            android:background="#00000000"
            android:layout_marginTop="8dp"
            android:drawableTop="@drawable/selecter_hudong_img"
            android:textColor="@drawable/selecter_text_color"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:id="@+id/main_kongjian"
            android:text="空间"
            android:button="@null"
            android:layout_weight="1"
            android:background="#00000000"
            android:checked="false"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:drawableTop="@drawable/selecter_kongjian_img"
            android:textColor="@drawable/selecter_text_color"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:id="@+id/main_wode"
            android:text="我的"
            android:button="@null"
            android:layout_weight="1"
            android:background="#00000000"
            android:checked="false"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:drawableTop="@drawable/selecter_wode_img"
            android:textColor="@drawable/selecter_text_color"/>
    </RadioGroup>
</LinearLayout>
</ViewSwitcher>