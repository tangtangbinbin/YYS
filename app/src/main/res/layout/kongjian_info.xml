<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.yys.view.KeyboardListenLinearlayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/keyboardlistenLinearlayout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/kongjian_info_fanhui"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="31dp"
                android:src="@mipmap/fanhui"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kongjian_shezhi"
            android:text="设置"
            android:textSize="20dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/heise"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="17dp"
        android:orientation="vertical">
        <com.example.administrator.yys.view.CircularImage
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            android:id="@+id/kj_info_touxiang"
            android:src="@mipmap/touxiang1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/kj_info_name"
            android:layout_marginTop="8dp"
            android:text="id 名称"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/kj_info_desc"
            android:text="用一句话来描述空间吧!"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_border_gray"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/shape_radious_black2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/kj_info_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="查找时间 例:20170101"
                android:textSize="12sp"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/kj_info_yq_lin"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yaoqing"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:id="@+id/kj_info_xc_lin"
            android:layout_marginRight="17dp"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiangce"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相册"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:id="@+id/kj_info_lin2"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/shape_radious_black2"
            android:orientation="vertical">
            <EditText
                android:id="@+id/kj_info_edit2"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:inputType="number"
                android:hint="查找时间 例:20170101"
                android:textSize="12sp"
                android:background="@null"
                android:textAlignment="center" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:id="@+id/kj_info_queding"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="17dp"
            android:textColor="@color/chengse"
            android:textSize="18sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp">
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/kongjian_info_swipe"
            android:layout_alignParentStart="true">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="#00000000"
                android:cacheColorHint="#00000000"
                android:scrollbars="@null"
                android:id="@+id/kj_gushi_listview"></ListView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingBottom="17dp"
            android:adjustViewBounds="true"
            android:id="@+id/kj_info_fabiao_img"
            android:src="@mipmap/fabiao"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingBottom="17dp"
            android:adjustViewBounds="true"
            android:id="@+id/kj_info_fabiaoluyin_img"
            android:src="@mipmap/fabiaoluyin"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/kj_info_fabiao_img"/>
    </RelativeLayout>

</com.example.administrator.yys.view.KeyboardListenLinearlayout>
