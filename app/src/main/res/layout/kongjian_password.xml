<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kj_pass_hui_lin"
        android:orientation="vertical"
        android:layout_weight="1"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:background="@color/baise"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kj_pass_tishi"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:text="输入密码"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:id="@+id/t1"
                android:background="@drawable/shape_border_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:id="@+id/t2"
                android:background="@drawable/shape_border_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/t3"
                android:textSize="16sp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:layout_weight="1"
                android:background="@drawable/shape_border_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:inputType="numberPassword"
                android:gravity="center"
                android:id="@+id/t4"
                android:background="@drawable/shape_border_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:layout_weight="1"
                android:id="@+id/t5"
                android:background="@drawable/shape_border_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/t6"
                android:inputType="numberPassword"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/shape_border_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="取消"
                android:id="@+id/kj_pass_quxiao"
                android:background="@color/huise"/>
            <EditText
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/kj_pass_edit"
                android:maxLength="6"
                android:inputType="number"
                android:textColor="@color/baise"
                android:cursorVisible="false"

                android:background="@null"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/kj_pass_queding"
                android:text="确定"
                android:background="@color/chengse"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
